{
    "bind_addr": "{{ internal_ip }}",
    "bootstrap_expect": {{ 0 if consul_master == "false" else consul_join_ips | length }},
    "client_addr": "0.0.0.0",
    "datacenter": "DC1",
    "data_dir": "/opt/consul",
    "domain": "{{ domain }}",
    "enable_script_checks": true,
    "dns_config": {
        "enable_truncate": true,
        "only_passing": true
    },
    "enable_syslog": true,
    "encrypt": "bnRHLmJ6TeLomirgEOWP2g==",
    "leave_on_terminate": true,
    "log_level": "INFO",
    "rejoin_after_leave": true,
    "retry_join": ["{{ consul_join_ips | join('", "') }}"],
    "server": {{ consul_master }},
    "start_join": ["{{ consul_join_ips | join('", "') }}"],
    "ui": true
}
